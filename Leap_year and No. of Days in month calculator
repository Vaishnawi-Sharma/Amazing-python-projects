year=int(input("enter a year "))
def checking_leap_year(year):
    if year%4==0:
        if year%100==0:
            if year %400==0:
                print("It's a leap year ")
                return "leap"
            else:
                print("It's not a leap year ")
                return "not leap " 
        else :
            print("It's definitely a leap year ") 
            return "leap"  
    else :
        print("It's not a leap year ")
        return "not leap"
leap_or_not=checking_leap_year(year)        
month=int(input("enter the month no. in which you want to check the no. of days : "))
list=[""" 
