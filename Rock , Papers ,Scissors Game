#Rock , Papers, Scissors Game


import random
def rock_paper_scissors():
    """ Function to play Rock, Paper, Scissors game """

    print("ðŸ”¥Let's play Rock, Paper, Scissors Game!  ðŸ”¥")
    print("ðŸŒŸRules:")
    print("ðŸ‘ŠRock wins against scissors")
    print("âœŒScissors win against paper")
    print("âœ‹Paper wins against rock\n")
    while True:
        print("Choose:")
        print("0 - Rock")
        print("1 - Paper")
        print("2 - Scissors")

        user_choice=int(input("Choose what you want (0/1/2) :"))
        comp_choice=random.randint(0,2)
        print(comp_choice)

        
        if(user_choice<0 or user_choice>2):
            print("<Invalid choice>")
    
        elif user_choice==comp_choice :
            print("<ðŸŽ‰ MATCH IS DRAW BETWEEN YOU AND COMPUTERðŸŽ‰ >")
        elif (comp_choice>user_choice) or (comp_choice==0 and user_choice==2 ):
            print("<ðŸ˜” USER LOSE>")
        elif (comp_choice<user_choice) or (comp_choice==2 and user_choice==1):
            print("<ðŸŽŠ ðŸ‘‘ ðŸŽ‰ USER WIN ðŸŽ‰ ðŸ‘‘ ðŸŽŠ>")  
        else:
            print("Sorry ! , The game is not working properly : ")  

        replay = input("Do you want to play again? (Y/N) : ðŸ™ƒ ")
        if replay.upper() != 'Y':
            break
    

print(" Thank you for playing Rock, Paper, Scissors! ðŸ¤–ðŸ¤ŸðŸ˜‡")

# Call the function to start the game
rock_paper_scissors()
